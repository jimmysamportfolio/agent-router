{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write \"**/*.{ts,tsx,js,jsx,json,css}\" --ignore-path .prettierignore"
          },
          {
            "type": "command",
            "command": "npx tsc --noEmit"
          },
          {
            "type": "command",
            "command": "npm run lint"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npm run lint"
          },
          {
            "type": "command",
            "command": "npx prettier --write \"**/*.{ts,tsx,js,jsx,json,css}\" --ignore-path .prettierignore"
          },
          {
            "type": "command",
            "command": "npx tsc --noEmit"
          }
        ]
      }
    ]
  }
}
